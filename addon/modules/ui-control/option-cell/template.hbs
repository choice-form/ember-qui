{{!--如果输入类型是input，则，使用其他选项备注组件--}}
<div>
  {{#unless (eq option.inputType 'input')}}
    <input
      id={{option.uuid}}
        type={{control.selectType}}
      onclick={{action 'handleOptionClick'}}
        name={{control.uuid}}
      autofocus={{autofocus}}
        placeholder={{option.placeholder}}
      checked={{option.selected}}
        disabled={{disabled}}
      required={{required}}
        tabindex={{tabindex}}
      value={{option.value}}
    >
    {{ui-control/label option}}
  {{else}}
    {{ui-control/text-cell control option handleEvents}}
  {{/unless}}
</div>


{{!--选择选项再弹出输入框--}}
{{#if (and (eq option.inputType "select-input") option.selected)}}
  {{ui-control/text-cell control option handleEvents}}
{{/if}}

{{#if option.selected}}
  <span>选择了</span>
{{/if}}

{{errorMessage}}