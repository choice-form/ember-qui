<div class="item" onclick={{action 'select'}}>
  {{input
    id=option.uuid
    type=nodeInfo.selectType
    autofocus=autofocus
    disabled=disabled
    name=nodeInfo.id
    required=required
    tabindex=tabindex
    value=option.value
  }}

  <label for={{option.uuid}} onclick={{action 'stopPropagation'}}>
    {{optionSvg}}

    {{#if option.text}}
      <span>{{option.text}}</span>
    {{/if}}
    {{option.picture}}
  </label>

  {{#if option.selected}}
    <span>选择了</span>
  {{/if}}

  {{errorMessage}}
</div>
