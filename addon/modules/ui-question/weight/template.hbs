<div class="weight-header">
  <h4>weight charts</h4>
  <div class="weight-chart">
    {{#each node.options as |option|}}
      {{html-safe (concat "<div style='flex-basis:" option.value "%;" "background:" option.color "'></div>")}}
    {{/each}}
  </div>
</div>

{{#each node.options as |option|}}
  {{ui-component/ui-range text=(unbound option.text)
                          unit=(unbound node.unit)
                          value=(concat option.value)
                          minValue=0
                          maxValue=(unbound option.maxValue)
                          isDescription=false
                          handleOptionInput=(action "handleOptionInput" option)}}
{{/each}}