<div class="weight-header">
  <h4>test</h4>
  <div class="weight-chart">
    {{#each node.options as |option|}}
      {{html-safe (concat "<div style='flex-basis:" option.value "%;" "background:" option.color "'></div>")}}
    {{/each}}
  </div>
</div>

{{#each node.options as |option|}}
  <div class='weight-item' data-render-id={{option.renderId}}>
    <h4 class="cell-labels">
      {{option.text}}
    </h4>
    <div class="weight-slider">
      {{range-slider start=option.value
                     connect="lower"
                     on-change=(action "handleOptionInput" option)
      }}
    </div>
  </div>
{{/each}}