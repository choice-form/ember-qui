<div class='ui-icon' data-render-id={{option.renderId}}>
    <input
      name={{node.renderId}}
        id={{option.renderId}}
      type={{node.selectType}}
        onclick={{action 'handleOptionClick'}}
      checked={{option.selected}}
        disabled={{disabled}}
      required>

    <label for={{option.renderId}}>
      <div class="effect-container">
        <div class="svg-wrapper">
          {{svg}}
        </div>
        {{#if option.selected}}
          <div class="particle-wrapper l">
            <ul class="particle-container">
              <li class="particle-item"></li>
              <li class="particle-item"></li>
              <li class="particle-item"></li>
              <li class="particle-item"></li>
              <li class="particle-item"></li>
              <li class="particle-item"></li>
              <li class="particle-item"></li>
              <li class="particle-item"></li>
            </ul>
          </div>
        {{/if}}
      </div>
      <div class="labels">
        <div class="svg-wrapper">
          {{svg-item (if option.selected (concat node.selectType '-active') node.selectType)}}
        </div>
        <span>{{option.text}}</span>
      </div>
    </label>
  </div>