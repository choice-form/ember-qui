<div class='ui-icon' data-render-id={{option.renderId}}>
    <input
      name={{node.renderId}}
      id={{option.renderId}}
      type={{node.selectType}}
      onclick={{action 'handleOptionClick'}}
      checked={{option.selected}}
      disabled={{disabled}}
      required>

    <label for={{option.renderId}} class={{if svg 'svg' 'text'}}>
      <div class="effect-container">
        {{#if svg}}
          <div class="svg-wrapper">
            {{svg}}
          </div>
        {{else}}
          <div class="icon-text">
            <span>{{{insert-img option.text}}}</span>
          </div>
        {{/if}}

        {{#if (and option.selected svg)}}
          {{particle size='l'}}
        {{/if}}
      </div>

      {{#if svg}}
        <div class="labels">
          <div class="svg-wrapper">
            <div class={{concat 'option-type ' (if option.selected (concat node.selectType '-active') node.selectType)}}>
              {{#if (and option.selected (eq node.selectType 'checkbox'))}}
                {{svg-item 'checkbox-active' size="16px" viewBox="16"}}
              {{/if}}
            </div>
          </div>
          <span>{{{insert-img option.text}}}</span>
        </div>
      {{/if}}
    </label>
  </div>
