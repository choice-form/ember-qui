<h4 class="cell-labels">
  {{option.text}}
  {{#if option.description}}
    <span>{{option.description}}</span>
  {{/if}}
</h4>
<table class={{concat 'ui-rating ' 'score-' option.count}} data-render-id={{option.renderId}}>
  <thead>
  {{#each option.marks as |mark|}}
    <tr>
      {{mark}}
    </tr>
  {{/each}}
  </thead>
  <tbody>
  {{#each graphs as |g|}}
    <tr>
      <input
        type="checkbox"
        id={{g.uuid}}
          value={{g.value}}
        onclick={{action 'handleOptionClick'}}
          checked={{g.checked}}
      >

      <label for={{g.uuid}} value={{g.value}}>
        <svg style="display:block" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="16px"
             height="16px" viewBox="0 0 16 16">
          <use xlink:href="#{{g.icon}}" fill=""/>
        </svg>
      </label>
    </tr>
  {{/each}}
  </tbody>
</table>