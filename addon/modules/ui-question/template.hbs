{{#if isLoading}}
  <div class="full-screen-loading">
    <div class="loading-wrapper">
      {{ui-addon/svg-item icon="positioning" size="40px" viewBox="40"}}
    </div>
  </div>
{{/if}}

{{#if question.intro}}
  {{ui-component/ui-header intro imageTop=true}}
{{/if}}

<section>
  <div class="wrapper">
    {{#each question.nodes as |node|}}
      {{#ui-question/lazy-loader isSingle=true as |viewable|}}
        {{#if viewable}}
          {{ui-question/-node node question.handleEvents}}
        {{/if}}
      {{/ui-question/lazy-loader}}
    {{/each}}
  </div>
</section>

{{ui-question/-node/button-cell
  prevButton=question.prevButton
  nextButton=question.nextButton
  handlePrevClick=question.handleEvents.handlePrevClick
  handleNextClick=question.handleEvents.handleNextClick
  rightIcon="arrows-tail-right"}}
