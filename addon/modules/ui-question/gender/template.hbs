{{#each options as |option|}}
  {{#if option.inputType}}
    {{ui-question/choice node option handleEvents}}
  {{else}}
    <div class='ui-icon' data-render-id={{option.renderId}}>
      <input
        name={{node.renderId}}
          id={{option.renderId}}
        type={{node.selectType}}
          onclick={{action 'handleOptionClick' option}}
        checked={{option.selected}}
          disabled={{disabled}}
        required>

      <label for={{option.renderId}}>
        <div class="effect-container">
          <div class="svg-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                 width="64px" height="64px" viewBox="29 9 22 62">
              <use xlink:href="#{{option.icon}}"></use>
            </svg>
          </div>
          {{#if option.selected}}
            {{particle size='l'}}
          {{/if}}
        </div>
        <div class="labels">
          <div class="svg-wrapper">
            {{svg-item (if option.selected (concat node.selectType '-active') node.selectType)}}
          </div>
          <span>{{option.text}}</span>
        </div>
      </label>
    </div>
  {{/if}}
{{/each}}