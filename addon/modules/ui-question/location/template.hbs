<div class={{concat 'ui-' node.quesType}}>
  <div class={{concat "pin " locationState}}>
    <input
      id={{node.uuid}}
        type="checkbox"
      onclick={{action 'handleOptionClick'}}
    >
    <label for={{node.uuid}}>
      <div class="select-container">
        {{svg}}
        {{ui-addon/active-line-animation}}
      </div>
    </label>
  </div>
  <h4>{{tips}}</h4>
  {{#if (eq svgState 'success')}}
    <p>{{node.value}}</p>
  {{/if}}
  {{#if (eq svgState 'failed')}}
    <button>Try again</button>
  {{/if}}
</div>