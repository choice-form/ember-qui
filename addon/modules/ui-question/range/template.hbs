{{#if (eq option.inputType "input")}}
  {{ui-component/ui-text inputRule=option.inputRule
                         placeholder=option.placeholder
                         value=option.value
                         renderId=option.renderId
                         handleOptionInput=(action "handleOptionInput")
                         handleOptionInputForTextarea=(action "handleOptionInputForTextarea")
  }}
{{else}}
  {{ui-component/ui-range isDescription=true
                          text=option.text
                          unit=node.unit
                          minValue=option.minValue
                          maxValue=option.maxValue
                          value=option.value
                          renderId=option.renderId
                          handleOptionInput=(action "handleOptionInput")}}
{{/if}}