{{#each options as |option|}}
  <div class="list-wrapper">
    <p>
      {{#if option.image}}
        <img src={{option.image.large}}>
      {{/if}}
      {{{insert-img option.text}}}
    </p>

    <ul class="rate-wrapper list" data-state={{rateOptions.length}}>
      {{#each rateOptions as |rateOption|}}
        <li
          data-state={{if (eq option.value rateOption.value) "checked"}}
            onclick={{action handleEvents.handleOptionInput rateOption.value option node}}>
          <a data-state={{if rateOption.svg 'icon' 'label'}}>
            <div class="effect-container">
              <div class="svg-wrapper">
                {{#if rateOption.svg}}
                  {{{rateOption.svg}}}
                {{else}}
                  <span>{{rateOption.text}}</span>
                {{/if}}
              </div>
              {{#if (and (eq option.value rateOption.value) rateOption.svg)}}
                {{particle size='m'}}
              {{/if}}
            </div>
          </a>
          {{#if rateOption.svg}}
            <span>{{rateOption.text}}</span>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </div>
{{/each}}

{{#each node.otherOptions as |option|}}
  {{ui-question/choice node option handleEvents}}
{{/each}}
