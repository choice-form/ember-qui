{{#if isTextArea}}

  <textarea
    value={{option.value}}
    placeholder={{option.placeholder}}
    oninput={{action 'textareaAutoResize'}}
    onchange={{action 'handleOptionInput'}}
  ></textarea>

{{else}}
  <input
    class="ui-menu"
    type={{type}}
    value={{option.value}}
    placeholder={{option.placeholder}}
    onchange={{action 'handleOptionInput'}}
  >
{{/if}}
