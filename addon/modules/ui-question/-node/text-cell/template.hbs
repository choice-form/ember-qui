{{#if isTextArea}}

  <textarea
    value={{option.value}}
    placeholder={{option.placeholder}}
    oninput={{action 'textareaAutoResize'}}
    onchange={{action 'handleOptionInput'}}
  ></textarea>

{{else}}

  {{ui-question/-node/input-cell
    className=mobiClassName
    type=type
  value=option.value
  placeholder=option.placeholder
    handleOptionInput=(action 'handleOptionInput')
    svgName=svgName
  }}
{{/if}}
{{errorMessage}}