  <textarea
    value={{option.value}}
      placeholder={{option.placeholder}}
    onchange={{action 'handleOptionInput'}}
  >
  </textarea>
{{else}}
  <input
    type={{type}}
      required
      value={{option.value}}
    placeholder={{option.placeholder}}
      onchange={{action 'handleOptionInput'}}
  >
{{/if}}
