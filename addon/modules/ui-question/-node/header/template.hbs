<header class="question-header">
  <div>
    {{#if header.isMust}}
      <span class="required-asterisk">*</span>
    {{/if}}
    <span class="question-number">{{header.number}}.</span>
  </div>
  <h2 class="title">{{header.title}}</h2>
  {{#if header.description}}
    <pre class="description">{{header.description}}</pre>
  {{/if}}
</header>
{{#if header.images}}
  <figure>
    {{#each header.images as |image|}}
      <div>
        <div/>
        <img src={{image.thumbnail}} />
        <canvas/>
        <img src={{image.natural}} />
        <noscript/>
      </div>
    {{/each}}
  </figure>
{{/if}}
