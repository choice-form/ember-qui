{{#if (or emoji svg svgicon)}}

  <div class="select-container">

    {{#if emoji}}
      <div class="emoji-wrapper">
        <span class={{emojiClass}}>{{emoji}}</span>
      </div>
    {{else}}

      <div class="svg-wrapper">

        {{#if svgIcon}}
          {{component "ui-addon/svg-item" icon=svgIcon size=size viewBox=viewBox iconClass=iconClass}}
        {{else}}
          {{svg}}
        {{/if}}

      </div>
    {{/if}}

    {{ui-addon/active-line-animation circle=true}}
  </div>

{{/if}}


{{#if leftIcon}}
  {{component "ui-addon/svg-item" icon=leftIcon size=size viewBox=viewBox iconClass=iconClass}}
{{/if}}

{{yield}}

{{#if text}}
  <span>{{text}}</span>
{{/if}}


{{#if rightIcon}}
  {{component "ui-addon/svg-item" icon=rightIcon size=size viewBox=viewBox iconClass=iconClass}}
{{/if}}

