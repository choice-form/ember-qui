{{#ui-component/ui-dropdown node handleEvents titleIcon="map-location"}}

  {{#each node.regions as |region|}}
    <li>{{region.Meaning}}
      {{#if (or (eq node.grade 2) (eq node.grade 3))}}
        <ul>
          {{#each region.cities as |city|}}
            <li>{{city.Meaning}}
              {{#if (eq node.grade 3)}}
                <ul>
                  {{#each city.counties as |country|}}
                    <li>{{country.Meaning}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </li>
  {{/each}}
{{/ui-component/ui-dropdown}}