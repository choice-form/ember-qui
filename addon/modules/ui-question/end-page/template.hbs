{{#unless node.hideLogo}}
  {{ui-addon/progressive-image
    ratio='1'
    thumbnail=''
    image='https://cform-files.b0.upaiyun.com/UploadFiles/style-copy/img/choiceform.png'}}
{{/unless}}

{{#if node.qrCode}}
  <div class="ui-qrcode">
    <div class="qrcode-item">
      <div class="ic-payment-card"></div>
      {{ui-addon/qr-code data=node.qrCode size=360 padding=60}}
      <span>{{temp-i18n 'UI_ScanQrCode'}}</span>
    </div>
  </div>
{{/if}}

{{#if (xor (and node.hasReward node.showRewardLimitTime) node.qrCode)}}
  <div class="valid-time">
    {{svg-item "time"}}
    <span>{{unbound option.text}}</span>
  </div>
{{/if}}