{{#if (eq node.verificationType 'sms')}}
  {{ui-addon/svg-item icon="sms" size="64px" viewBox="40"}}
  <div class="ui-text">
    {{ui-question/-node/input-cell handleOptionInput=(action "handleOptionInput_SMS") type='tel' value='' placeholder='Please enter a cellphone number' svgName='int'}}
  </div>
  <div class="get-verification">
    <div class="ui-text">
      {{ui-question/-node/input-cell type='num' value='' placeholder='Please enter verification code' svgName='int'}}
    </div>
    {{ui-addon/label tagName='button' handleClick=(action 'handleOptionClick_SMS') text='Get verification code' class="button contrast"}}
  </div>
  <p>If you do not receive the message in the next 1 minutes,please go through the verification process one more time.</p>
{{/if}}

{{#if (eq node.verificationType 'password')}}
  {{ui-addon/svg-item icon="password" size="64px" viewBox="40"}}
  <div class="ui-text">
    {{ui-question/-node/input-cell handleOptionInput=(action "handleOptionInput_Password") type='password' value='' placeholder='Please enter a password' svgName='int'}}
  </div>
{{/if}}

{{#if (eq node.verificationType 'captcha')}}
  {{ui-addon/svg-item icon="captcha" size="64px" viewBox="40"}}
  <div class="get-verification">
    <div class="ui-text">
      {{ui-question/-node/input-cell type='url' value='' placeholder='Please enter a password' svgName='int'}}
      {{#if node.captcha}}
        <div class="captcha">
          <img src={{node.captcha}} alt="">
        </div>
      {{/if}}
    </div>
    {{#if captcha}}
      {{ui-addon/label tagName='button' leftIcon=(if node.captcha "refresh" "") text=(if node.captcha "refresh" "Get captcha code") class="button contrast" handleClick=(action 'handleOptionClick_captcha')}}
    {{else}}
      {{ui-addon/label tagName='button' leftIcon='refresh' class="button primary" text=countDown}}
    {{/if}}
  </div>
{{/if}}
