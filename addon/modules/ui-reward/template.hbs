<section data-render-id={{node.renderId}}>
  <div class="warapper">
    <div class="row reward-container">
      {{#unless (eq node.rewardType 'wechat')}}
        <figure class="attachment">
          {{#each node.images as |image|}}
            {{ui-addon/progressive-image
              ratio=image.ratio
              thumbnail=image.thumbnail
              image=image.natural}}
          {{/each}}
        </figure>
      {{/unless}}

      <header class="reward-header">
        {{#if (eq node.rewardType 'wechat')}}
          <div class="wechat-profile">
            <img src={{node.wechatImage}}>
            <span>{{node.wechatID}}</span>
          </div>
        {{/if}}

        {{#if node.rewardName}}
          <h2>{{node.rewardName}}</h2>
        {{/if}}

        <div class="reward-contents">
          <h2>{{node.title}}</h2>
          <span class="reward-description">{{node.description}}</span>
          <span class="current-time">{{node.rewardTime}}</span>
        </div>
      </header>

      <div class="control reward">

        {{#if (eq node.rewardType 'wechat')}}
          <div class="currency">
            <input type="checkbox" id={{node.renderId}} onclick={{action 'handleClick'}}>
            {{ui-component/ui-label icon=node.icon
                                    for=node.renderId
                                    size="40px"
                                    viewBox="40"}}
            {{#if currency}}
              <h3>{{node.rewardVaule}}</h3>
            {{/if}}
          </div>
        {{/if}}

        {{#unless (eq node.quesType 'random')}}
          {{#if node.qrCode}}
            <div class="ui-qrcode">
              <div class="qrcode-item">
                {{ui-addon/qr-code data=node.qrCode}}
              </div>
              <div class="scan-icon">{{svg-item "scan"}}</div>
              <p>Capture the screen and save it, you can't share it publicly. <span>{{node.qrDescription}}</span></p>
            </div>
          {{/if}}

          {{#if node.rewardToMessage}}
            <div class="ui-verification">
              <div class="get-verification">
                <div class="ui-text">
                  {{ui-component/ui-input type='url'
                                          value=''
                                          placeholder='Please enter a password'
                                          icon='int'
                                          handleOptionInput=(action "handleQuestionInput")}}
                </div>
                {{ui-component/ui-button text=(if getInfoButton "Get captcha code" countDown)
                                         className="contrast"
                                         leftIcon=(if getInfoButton '' 'refresh')
                                         handleClick=(if getInfoButton (action "handleOptionClick") '')
                }}
              </div>
            </div>
          {{/if}}
        {{/unless}}

      </div>

      <div class="reward-additional">
        {{ui-addon/disclaimer}}
      </div>

    </div>
  </div>
</section>
{{#if node.isReward}}
  {{ui-question/-node/button-cell
    class="button-cell-reward"
    nextButton=node.buttonText
    handleNextClick=(action 'handleNextClick')
    leftIcon="gift"
  }}
{{/if}}
