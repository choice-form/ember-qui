{{#if isTextArea}}
  <textarea
      value={{value}}
      placeholder={{placeholder}}
      onblur={{handleOnblur}}
      oninput={{handleOptionInputForTextarea}}></textarea>
  {{svg-item icon size=size viewbox=viewbox}}
{{else}}
  <input
      class={{className}}
      type={{type}}
      value={{value}}
      required
      placeholder={{placeholder}}
      onblur={{handleOnblur}}
      oninput={{handleOptionInput}}
      onchange={{handleOptionInput}}>
  {{svg-item icon size=size viewbox=viewbox}}
{{/if}}

{{#if errorMessage}}
  {{ui-addon/input-alert errorMessage=errorMessage}}
{{/if}}
