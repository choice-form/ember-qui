<div class="upload-item-wrapper">
  <div class={{concat "upload-item" uploadState}}>
    <input
      type='file'
      id={{option.uuid}}
        onclick={{handleOptionClick}}
      onchange={{handleOptionInput}}
    >
    {{#if option.value}}
      <a class="clear icon-button primary">
        {{ui-addon/svg-item icon="trash"}}
      </a>
      <div class="upload-thumbnail">
        <div class="progress-bar">
          <div class="progress" style="width: 50%"></div>
        </div>
        <img src={{option.value}}/>
      </div>
    {{else}}
      {{ui-addon/svg-item icon="upload-image" size="64px" viewBox="64" iconClass="upload-image-icon"}}
    {{/if}}
    <label class={{concat "button" uploadButton}} for={{option.uuid}}>
      {{ui-addon/svg-item icon=uploadIcon}}
      <span>{{uploadText}}</span>
    </label>
  </div>

  {{#unless option.value}}
    {{#if option.text}}
      <span>{{option.text}}</span>
    {{/if}}
  {{/unless}}
</div>