<input
    id={{renderId}}
    type={{selectType}}
    onclick={{handleOptionClick}}
    name={{renderId}}
    autofocus={{autofocus}}
    placeholder={{placeholder}}
    checked={{selected}}
    disabled={{disabled}}
    required={{required}}
    tabindex={{tabindex}}
    value={{value}}>

<label for={{renderId}}>
  {{#if image}}
    <figure class="attachment">
      {{ui-addon/progressive-image
        background=background
        ratio=image.ratio
        objectFit=objectFit
        thumbnail=image.thumbnail
        image=image.natural}}
    </figure>
  {{/if}}
  <div class="pic-description">
    <div class="effect-container">
      <div class="svg-wrapper">
        <div class={{concat 'option-type ' icon}}>
          {{#if (eq icon 'checkbox-active')}}
            {{svg-item 'checkbox-active' size="16px" viewBox="16"}}
          {{/if}}
        </div>
      </div>
      {{#if selected}}
        {{particle size=size}}
      {{/if}}
    </div>
    {{#if text}}
      <span>{{text}}</span>
    {{/if}}
  </div>
</label>
{{#if zoomable}}
  <a class="zoom-button" onclick={{action handleOptionZoom}}>
    {{svg-item 'zoom-in'}}
  </a>
{{/if}}
