<input
  id={{option.uuid}}
    type={{node.selectType}}
  onclick={{action 'handleOptionClick'}}
    name={{node.uuid}}
  autofocus={{autofocus}}
    placeholder={{option.placeholder}}
  checked={{option.selected}}
    disabled={{disabled}}
  required={{required}}
    tabindex={{tabindex}}
  value={{option.value}}
>

<label for={{option.uuid}}>

  {{#if image}}
    <figure class="attachment">
      {{ui-addon/progressive-image
        ratio=image.ratio
        thumbnail=image.thumbnail
        image=image.natural}}
    </figure>
  {{/if}}
  <div class="pic-description">
    <div class="select-container">
      <div class="svg-wrapper">
        {{svg}}
      </div>
      {{#if option.selected}}
        {{ui-addon/svg-particle uuid=(concat option.uuid 'particle') values="0;18" dur="0.45s"}}
      {{/if}}
    </div>
    <span>{{option.text}}</span>
  </div>
</label>