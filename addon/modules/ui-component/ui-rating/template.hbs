{{#if (eq option.inputType "input")}}
  {{ui-component/ui-text node option handleEvents}}
{{else}}
  <h4 class="cell-labels">
    {{option.text}}
    {{#if option.description}}
      <span>{{option.description}}</span>
    {{/if}}
  </h4>
  <table class={{concat 'score-' option.count}} data-render-id={{option.renderId}}>
    <thead>
    <tr>
      {{#each option.marks as |mark|}}
        <td><span>{{mark}}</span></td>
      {{/each}}
    </tr>
    </thead>
    <tbody>
    <tr>
      {{#each graphs as |option|}}
        <td>
          <input
            type="checkbox"
            id={{option.uuid}}
              value={{option.value}}
            onclick={{action 'handleOptionInput'}}
              checked={{option.checked}}
          >

        {{ui-component/ui-label for=option.uuid
                                emoji=option.emoji
                                selected=option.checked
                                text=option.text
                                emojiClass="rating-emoji"
                                icon=option.icon
                                viewBox="64"
        }}

        </td>
      {{/each}}
    </tr>
    </tbody>
  </table>
{{/if}}