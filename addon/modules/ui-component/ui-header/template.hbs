{{#if (and header.images imageTop)}}
  <figure class="attachment">
    {{#each header.images as |image|}}
      {{ui-addon/progressive-image
        ratio=image.ratio
        objectFit=image.objectFit
        thumbnail=image.thumbnail
        image=image.natural}}
    {{/each}}
  </figure>
{{/if}}

<header class="header">
  {{#if (or header.isMust header.number)}}
    <div>
      {{#if header.isMust}}
        <span class="required-asterisk">*</span>
      {{/if}}
      <span class="question-number">{{header.number}}.</span>
    </div>
  {{/if}}

  <h2 class="title">{{header.title}}</h2>
  {{#if header.description}}
    <pre class="description">{{header.description}}</pre>
  {{/if}}
</header>

{{#if (and header.images (not imageTop))}}
  <figure class="attachment">
    {{#each header.images as |image|}}
      {{ui-addon/progressive-image
        ratio=image.ratio
        objectFit=image.objectFit
        thumbnail=image.thumbnail
        image=image.natural}}
    {{/each}}
  </figure>
{{/if}}
