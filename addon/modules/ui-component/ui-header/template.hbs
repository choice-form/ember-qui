{{#if hasTopImages}}
  <figure class="attachment">
    {{#each header.images as |image|}}
      {{ui-addon/progressive-image
        ratio=image.ratio
        objectFit=image.objectFit
        thumbnail=image.thumbnail
        image=image.natural}}
    {{/each}}
  </figure>
{{/if}}

<header class="header">
  {{#if header.number}}
    <div>{{requiredMark}} <span class="question-number">{{header.number}}.</span></div>
  {{/if}}

  <h2 class="title">{{header.title}}</h2>
  {{description}}
</header>

{{#if hasNormalImages}}
  <figure class="attachment">
    {{#each header.images as |image|}}
      {{ui-addon/progressive-image
        ratio=image.ratio
        objectFit=image.objectFit
        thumbnail=image.thumbnail
        image=image.natural}}
    {{/each}}
  </figure>
{{/if}}
