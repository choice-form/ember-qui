{{#if hasTopImages}}
  <figure class="attachment" onclick={{action "openPhotoSwipe"}}>
    {{#if multiImages}}
      {{ui-component/ui-header-swiper swiperName="header" header=header}}
    {{else}}
      {{ui-addon/progressive-image
        ratio=singleImage.ratio
        objectFit=singleImage.objectFit
        thumbnail=singleImage.thumbnail
        image=singleImage.natural}}
    {{/if}}
  </figure>
{{/if}}

<header class="header">
  {{#if (or header.asterisks header.number)}}
    <div>{{requiredMark}} {{quesNumber}}</div>
  {{/if}}

  <h2 class="title">{{{insert-img header.title}}}</h2>
  {{description}}
</header>

