{{#if hasTopImages}}
  <figure class="attachment">
    {{#if multiImages}}
      {{ui-component/ui-header-swiper swiperName="header" header=header}}
    {{else}}
      {{ui-addon/progressive-image
        ratio=singleImage.ratio
        objectFit=singleImage.objectFit
        thumbnail=singleImage.thumbnail
        image=singleImage.natural}}
    {{/if}}
    {{#if header.imgScale}}
      <a class="zoom-button" onclick={{action "openPhotoSwipe"}}>
        {{svg-item 'zoom-in'}}
      </a>
    {{/if}}
  </figure>
{{/if}}

<header class="header">
  {{#if (or header.asterisks header.number)}}
    <div>{{requiredMark}} {{quesNumber}}</div>
  {{/if}}

  <h2 class="title">{{{insert-img header.title}}}</h2>
  {{description}}
</header>


{{#if hasNormalImages}}
  <figure class="attachment">
    {{#component fixImgCom top=header.fixTop}}
      {{#if multiImages}}
        {{ui-component/ui-header-swiper swiperName="header" header=header}}
      {{else}}
        {{ui-addon/progressive-image
          ratio=singleImage.ratio
          objectFit=singleImage.objectFit
          thumbnail=singleImage.thumbnail
          image=singleImage.natural}}
      {{/if}}
      {{#if header.imgScale}}
        <a class="zoom-button" onclick={{action "openPhotoSwipe"}}>
          {{svg-item 'zoom-in'}}
        </a>
      {{/if}}
    {{/component}}
    {{#if needFixImage}}
      <div style={{supportStyle}}></div>
    {{/if}}

  </figure>
{{/if}}

{{#if header.video}}
  {{#component fixVdoCom top=header.fixTop}}
    {{ui-component/ui-video
      video=header.video
      url=header.video.url
      poster=header.video.poster
    }}
  {{/component}}
  {{#if needFixVideo}}
    <div style={{supportStyle}}></div>
  {{/if}}
{{/if}}
