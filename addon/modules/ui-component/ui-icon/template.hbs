<div class='ui-icon' data-render-id={{renderId}}>
  <input
    name={{name}}
    id={{renderId}}
      type={{selectType}}
    onclick={{handleOptionClick}}
      checked={{selected}}
    disabled={{disabled}}
    required
  >

  <label for={{renderId}}>
    <div class="effect-container">
      <div class="svg-wrapper">
        {{svg}}
      </div>
      {{#if selected}}
        {{ui-addon/svg-particle values="0;36" dur="0.65s"}}
      {{/if}}
    </div>
    <div class="labels">
      <div class="svg-wrapper">
        {{ui-addon/svg-item icon=(if selected (concat icon '-active') icon)}}
      </div>
      <span>{{text}}</span>
    </div>
  </label>
</div>


