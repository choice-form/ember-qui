{{#if icon}}
  {{ui-addon/svg-item icon=icon size="64px" viewBox="40"}}
{{/if}}


{{#unless (eq verificationType 'captcha')}}
  {{ui-component/ui-input handleOptionInput=(action "handleOptionInput")
                          type=(if (eq verificationType "password") 'password' 'tel')
                          placeholder=(if (eq verificationType "password") 'Please enter a password' 'Please enter a cellphone number')
                          icon='int'}}
{{/unless}}


{{#unless (eq verificationType 'password')}}
  <div class="get-verification">
    {{ui-component/ui-input type='url' value='' handleOptionInput=(action "handleOptionInput")
                            placeholder=(if (eq verificationType "captcha") 'Please enter a password' 'Please enter verification code')
                            icon='int'}}

    {{#if getInfoButton}}
      {{ui-component/ui-button text=buttonText className="button contrast"
                               handleClick=(action 'handleOptionClick_captcha')}}
    {{else}}
      {{ui-component/ui-button leftIcon='refresh' className="button primary refresh" text=countDown}}
    {{/if}}

    {{#if node.captcha}}
      <div class="captcha">
        <div class="captcha-wrapper"><img src={{node.captcha}} alt=""></div>
      </div>
    {{/if}}
  </div>
{{/unless}}