{{#if text}}
  <h4 class="range-title">
    {{text}}
  </h4>
{{/if}}

{{#if (or minValue maxValue)}}
  <div class="range-value">
    <span>Min value: {{minValue}}</span>
    <span>Max value: {{maxValue}}</span>
  </div>
{{/if}}

<div class="range-slider">
  {{#if value}}
    <h4>{{value}}</h4>
  {{/if}}
  {{range-slider start=value
                 connect="lower"
                 min=(if minValue minValue 0)
                 max=(if maxValue minValue 100)
                 on-change=handleOptionInput
  }}
</div>