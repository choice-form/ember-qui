{{#if text}}
  <h4 class="range-title">
    {{text}}
  </h4>
{{/if}}

{{#if isDescription}}
  <div class="range-value">
    <span>Min value: {{minValue}}</span>
    <span>Max value: {{maxValue}}</span>
  </div>
{{/if}}

<div class="range-slider">
    <h4>{{if value value 0}}{{unit}}</h4>
  {{range-slider start= (if value value 0)
                 connect="lower"
                 min=minValue
                 max=maxValue
                 on-change=handleOptionInput
  }}
</div>