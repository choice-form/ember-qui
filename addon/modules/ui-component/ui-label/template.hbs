{{yield}}

<div class="select-container">

  {{#if emoji}}
    <div class="emoji-wrapper">
      <span class={{emojiClass}}>{{emoji}}</span>
    </div>
  {{else}}

    <div class="svg-wrapper">
      {{#if svgIcon}}
        {{component "ui-addon/svg-item" icon=svgIcon size=size viewBox=viewBox iconClass=iconClass}}
      {{else}}
        {{svg}}
      {{/if}}
    </div>
  {{/if}}

  <div class="svg-particle">
    {{ui-addon/svg-item icon=(if option.selected "svg-particle" "") size="60px" viewBox="60"}}
  </div>
</div>

{{#if text}}
  <span>{{text}}</span>
{{/if}}
